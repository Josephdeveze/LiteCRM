{% extends 'base.html.twig' %}

{% block title %}Modifier Rendez-vous - LiteCRM{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Modifier Rendez-vous</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('rdv/update/' ~ rdv.id_rdv) }}">
                        <div class="form-group mb-3">
                            <label for="client_id">Client</label>
                            <select class="form-control" id="client_id" name="client_id" required>
                                {% for client in clients %}
                                    <option value="{{ client.id_client }}" {% if client.id_client == rdv.id_client %}selected{% endif %}>
                                        {{ client.Nom }} {{ client.Prenom }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="date">Date</label>
                            <input type="date" class="form-control" id="date" name="date" value="{{ rdv.date }}" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="heure_debut">Heure de début</label>
                            <input type="time" class="form-control" id="heure_debut" name="heure_debut" value="{{ rdv.heure_debut }}" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="heure_fin">Heure de fin</label>
                            <input type="time" class="form-control" id="heure_fin" name="heure_fin" value="{{ rdv.heure_fin }}" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="lieu">Lieu</label>
                            <input type="text" class="form-control" id="lieu" name="lieu" value="{{ rdv.lieu }}" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="status">Statut</label>
                            <select class="form-control" id="status" name="status" required>
                                {% for status in ['Prévu', 'Confirmé', 'Annulé', 'Terminé'] %}
                                    <option value="{{ status }}" {% if status == rdv.status %}selected{% endif %}>
                                        {{ status }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="notes">Notes</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3">{{ rdv.notes }}</textarea>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('rdv') }}" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}