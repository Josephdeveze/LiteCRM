{% extends 'base.html.twig' %}

{% block title %}Mon Profil - LiteCRM{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Mon Profil</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nom</label>
                        <p class="form-control-plaintext">{{ user.Nom }}</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Prénom</label>
                        <p class="form-control-plaintext">{{ user.Prenom }}</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <p class="form-control-plaintext">{{ user.Email }}</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Rôle</label>
                        <p class="form-control-plaintext">
                            <span class="badge {% if user.Role == 'admin' %}bg-danger{% else %}bg-primary{% endif %}">
                                {{ user.Role }}
                            </span>
                        </p>
                    </div>

                    <div class="text-end">
                        <a href="{{ path('dashboard') }}" class="btn btn-secondary">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}